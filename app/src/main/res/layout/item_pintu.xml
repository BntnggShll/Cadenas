<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1C6A96">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintu 1"
                android:textColor="@color/colom"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/tvnamapintu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kunci"
                android:layout_below="@+id/tvnamapintu"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colom"
                android:id="@+id/tvnamakunci"/>
            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/lingkaran1"
                android:layout_below="@+id/tvnamakunci"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/ic_door2"
                android:layout_below="@+id/tvnamakunci"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Dashboard"
    android:background="@drawable/gradient_backround2">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_backround2"
        android:rotation="143"
        android:layout_marginRight="90dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-150dp"
        android:layout_alignParentLeft="true"/>

    <View
        android:id="@+id/bgellipse"
        android:layout_width="wrap_content"
        android:layout_height="265dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/ellipse2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadenas"
        android:textStyle="bold"
        android:textSize="55sp"
        android:textColor="@color/colom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:id="@+id/title1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="50sp"
        android:textColor="@color/colom"
        android:textStyle="italic"
        android:layout_below="@+id/title1"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/title2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In to your Registered Account"
        android:layout_below="@+id/title2"
        android:textColor="@color/colom"
        android:textSize="15sp"
        android:layout_marginLeft="40dp"
        android:id="@+id/title3"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/tombol5"
        android:text="SignIn"
        android:textSize="22sp"
        android:textColor="@color/biruMuda"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/btnsignin"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/tombol6"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="30dp"
        android:text="SignUp"
        android:textSize="22sp"
        android:textColor="@color/colom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnsignup"/>


</RelativeLayout>
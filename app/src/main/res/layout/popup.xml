<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/bgpopup">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="320dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/lingkaran"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-200dp"
        android:layout_marginTop="-200dp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/lingkaran"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-140dp"
        android:layout_marginBottom="-120dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Pintu"
        android:textColor="@color/biruTuda"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etkodepintu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"
        android:hint="Kode Kunci"
        android:textSize="20sp"
        android:textColorHint="@color/hint"
        android:drawableStart="@drawable/ic_key"
        android:drawableEnd="@drawable/ic_arrow"
        android:drawablePadding="10dp"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/etnamapintu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etkodepintu"
        android:hint="Nama Pintu"
        android:textSize="20sp"
        android:textColorHint="@color/hint"
        android:drawableStart="@drawable/ic_door_closed"
        android:drawablePadding="10dp"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/etpasswordpintu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etnamapintu"
        android:hint="Password"
        android:textSize="20sp"
        android:textColorHint="@color/hint"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:padding="15dp"/>

    <Button
        android:id="@+id/btnsave"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/etpasswordpintu"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:text="Save"
        android:textSize="19sp"
        android:textColor="@color/colom"
        android:background="@drawable/button"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
